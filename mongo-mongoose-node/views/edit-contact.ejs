<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Edit Contact Form</h2>

      <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger" role="alert">
          <ul>
            <% errors.forEach(error => { %>
              <li><%= error.msg %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <form method="post" action="/contact?_method=PUT">
        <input type="hidden" name="_id" value="<%= contact._id %>">
        <input type="hidden" name="oldName" value="<%= (contact.oldName) ? contact.oldName : contact.name %>">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= contact.name %>" required>
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>" required>
        </div>
        <div class="mb-3">
          <label for="phone" class="form-label">Phone Number</label>
          <input type="text" class="form-control" id="phone" name="phone" value="<%= contact.phone %>" required>
        </div>
        <div class="d-flex justify-content-between">
          <a href="/contact" class="btn btn-primary">Return</a>
          <button type="submit" class="btn btn-success">Edit Contact</button>
        </div>
      </form>
    </div>
  </div>
</div>